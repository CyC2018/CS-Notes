:less
	.foo { .bar; }

~
	:less
	  .foo { .bar; }

----------------------------------------------------

[
	["filter-less", [
		["filter-name", ":less"],
		["selector", [".foo"]],
		["punctuation", "{"],
		["mixin-usage", ".bar"],
		["punctuation", ";"],
		["punctuation", "}"]
	]],
	["punctuation", "~"],
	["filter-less", [
		["filter-name", ":less"],
		["selector", [".foo"]],
		["punctuation", "{"],
		["mixin-usage", ".bar"],
		["punctuation", ";"],
		["punctuation", "}"]
	]]
